<div>
  <div>
    <h1>
      <% prof_name = @the_professor.name.split(", ") %>
      Professor <%= prof_name[0] %> details
    </h1>

    <div>
      <div>
        <a href="/professors" class="btn btn-dark" style="background-color: #800000 !important;">
          Return to professors
        </a>
      </div>

    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= prof_name[1]  %> <%= prof_name[0]%>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_professor.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_professor.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<hr>
