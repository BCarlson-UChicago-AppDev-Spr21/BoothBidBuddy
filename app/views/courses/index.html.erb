<div>
  <div>
    <h1>
      List of all courses
    </h1>
  </div>
</div>

<hr>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Course comments count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_courses.each do |a_course| %>
      <tr>
        <td>
          <%= a_course.id %>
        </td>

        <td>
          <%= a_course.title %>
        </td>

        <td>
          <%= a_course.course_comments_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_course.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_course.updated_at) %> ago
        </td>

        <td>
          <a href="/courses/<%= a_course.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
