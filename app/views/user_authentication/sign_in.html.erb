<div class="container">
  <h1>Sign in</h1>


  <form action="/user_verify_credentials" method="post">
    <div class="form-floating mb-3">
      <input id="email_box" name="query_email" placeholder="Enter your email..." type="text" class="form-control">
      <label for="email_box">Email Address</label>
    </div>

    <div class="form-floating mb-3">
      <input id="password_box" name="query_password" placeholder="Enter your password..." type="password" class="form-control">
      <label for="password_box">Password</label>

    </div>

    <button class="btn btn-dark">
      Sign in
    </button>
  </form>

  <hr>

  <p>
    Or, <a href="/user_sign_up" class="btn btn-dark">Sign up</a> instead.
  </p>
</div>